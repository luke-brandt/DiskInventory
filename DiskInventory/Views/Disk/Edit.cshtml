@model Disk
@{
    string title = ViewBag.Action + "Disk ";
    ViewBag.Title = title;
}
<h2>@ViewBag.Title</h2>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="test-danger"> </div>
    <div class="form-group">
        <div>
            <label asp-for="DiskName">Disk Name</label>
            <input asp-for="DiskName" class="form-control" />
        </div>
        <div>
            <label asp-for="ReleaseDate">Release Date</label>
            <input asp-for="ReleaseDate" class="form-control" placeholder="12:00 AM"/>
        </div>
        <div>
            <label asp-for="DiskTypeId">Disk Type</label>
            <select asp-for="DiskTypeId" class="form-control">
                <option value="select a type">Select a disk type</option>
                @foreach (DiskType t in ViewBag.DiskTypes)
                {
                    <option value="@t.DiskTypeId">@t.DiskTypeDescription</option>
                }
            </select>
        </div>
        <div>
            <label asp-for="GenreId">Disk Type</label>
            <select asp-for="GenreId" class="form-control">
                <option value="select a type">Select a genre</option>
                @foreach (Genre g in ViewBag.DiskGenres)
                {
                    <option value="@g.GenreId">@g.GenreDescription</option>
                }
            </select>
        </div>
        <div>
            <label asp-for="StatusId">Status Of Disk</label>
            <select asp-for="StatusId" class="form-control">
                <option value="select a status">Select a disk status</option>
                @foreach (Status s in ViewBag.DiskStatuses)
                {
                    <option value="@s.StatusId">@s.StatusDescription</option>
                }
            </select>
        </div>
    </div>

    <input type="hidden" asp-for="DiskId" />
    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Disk" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>

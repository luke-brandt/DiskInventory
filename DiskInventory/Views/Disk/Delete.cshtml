@model Disk
@{
    ViewBag.Title = "Delete Disk";
}
<h2>Confirm Delete?</h2>
<h3>Are you sure you want to delete @Model.DiskName from the database?</h3>
<p>Note: If disk has any checkout history it will not be deleted from database.</p>
<form asp-action="Delete" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger bg-dark"></div>
    <input type="hidden" asp-for="DiskId" />
    <button type="Submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Disk" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>

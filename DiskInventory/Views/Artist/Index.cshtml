@model List<Artist>
@{ 
    ViewBag.Title = "Artist Manager";
}

<h1>@ViewBag.Title</h1>
<a asp-controller="Artist" asp-action="Add" class="text-light">Add An Artist</a>
<table class="table table-dark">
    <thead>
        <tr>
            <th>Artist Id</th>
            <th>Artist Name</th>
            <th>Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var artist in Model)
            {
        <tr>
            <td>@artist.ArtistId</td>
            <td>@artist.ArtistName</td>
            <td>@artist.ArtistType.ArtistTypeDescription</td>
            <td><a asp-controller="Artist" asp-action="Edit" asp-route-id="@artist.ArtistId" class="btn btn-success">Edit</a></td>
            <td><a asp-controller="Artist" asp-action="Delete" asp-route-id="@artist.ArtistId" class="btn btn-primary">Delete</a></td>
        </tr>
            }
    </tbody>
</table>